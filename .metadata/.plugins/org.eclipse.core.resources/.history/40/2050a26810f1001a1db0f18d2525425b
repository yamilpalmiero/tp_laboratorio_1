#ifndef FUNCIONES_H_
#define FUNCIONES_H_

#endif /* FUNCIONES_H_ */

/* brief Pide dos numeros enteros por parametro y los suma.
 *
 * param Primer numero entero a sumar.
 * param Segundo numero entero a sumar.
 * return Retorna la suma.
 */
int sumar(int x, int y);

/* brief Toma dos numeros enteros por parametro y los resta.
 *
 * param Primer numero para la resta.
 * param Segundo numero a restar.
 * return Retorna la diferencia entre ambos numeros.
 */
int restar(int x, int y);

/* brief Toma dos numeros enteros por parametro y realiza la division.
 *
 * param Dividendo.
 * param Divisor.
 * return Retorna el cociente.
 */
float dividir(int x, int y);

/* brief Toma dos numeros enteros por parametro y realiza la multiplicacion.
 *
 * param Primer numero a multiplicar.
 * param Segundo numero a multiplicar.
 * return Producto.
 */
int multiplicar(int x, int y);

/* brief Toma un numero entero por parametro y realiza el factorial.
 *
 * param Numero a realizar el factorial.
 * param
 * return Resultado del factorial.
 */
int factorial(int x);
